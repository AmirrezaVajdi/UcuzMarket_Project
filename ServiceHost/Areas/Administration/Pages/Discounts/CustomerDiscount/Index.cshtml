@page
@using DiscountManagement.Configuration.Permissions;
@model ServiceHost.Areas.Administration.Pages.Discounts.CustomerDiscount.IndexModel
@{
    ViewData["Title"] = "مدیریت تخفیف مشتریان";
}

<div class="row" Permission="@DiscountPermission.DefineCustomerDiscount">
    <div class="col-sm-12">
        <h4 class="page-title pull-right">@ViewData["title"]</h4>
        <p class="pull-left">
            <a class="btn btn-success btn-lg" href="#showmodal=@Url.Page("./Index", "Create")">تعریف تخفیف مشتری</a>
        </p>
    </div>
</div>

<div class="row" Permission="@DiscountPermission.SearchCustomerDiscounts">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">جستجو در تخفیف مشتریان</h3>
            </div>
            <div class="panel-body">
                <form class="form-inline" role="form" method="get">
                    <div class="form-group">
                        <label asp-for="SearchModel.StartDate" class="sr-only"></label>
                        <input asp-for="SearchModel.StartDate" class="form-control persianDateInput">
                    </div>

                    <div class="form-group">
                        <label asp-for="SearchModel.EndDate" class="sr-only"></label>
                        <input asp-for="SearchModel.EndDate" class="form-control persianDateInput">
                    </div>

                    <div class="form-group">
                        <label asp-for="SearchModel.ProductId" class="sr-only"></label>
                        <select asp-items="Model.Products" class="form-control" asp-for="SearchModel.ProductId">
                            <option value="0">گروه محصولی ...</option>
                        </select>
                    </div>

                    <button type="submit" class="btn btn-success waves-effect waves-light m-l-10">جستجو</button>
                    <a class="btn btn-primary waves-effect waves-light m-l-10" asp-page="./Index">مشاهده همه</a>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row" id="ProductCategoriesDiv" Permission="@DiscountPermission.ListCustomerDiscounts">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">لیست تخفیفات مشتریان (@Model.CustomerDiscounts.Count)</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>محصول</th>
                                    <th>درصد تخفیف</th>
                                    <th>تاریخ شروع</th>
                                    <th>تاریخ ایحاد</th>
                                    <th>علت تخفیف</th>
                                    <th>تاریخ تولید</th>
                                    <th>عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var customerDiscount in Model.CustomerDiscounts)
                                {
                                    <tr>
                                        <td>@customerDiscount.Id</td>
                                        <td>@customerDiscount.Product</td>
                                        <td>@customerDiscount.DiscountRate</td>
                                        <td>@customerDiscount.StartDate</td>
                                        <td>@customerDiscount.EndDate</td>
                                        <td>@customerDiscount.Reason</td>
                                        <td>@customerDiscount.CreationDate</td>
                                        <td>
                                            <a Permission="@DiscountPermission.EditCustomerDiscount" class="btn btn-warning waves-effect waves-light m-b-5"
                                               href="#showmodal=@Url.Page("./Index", "Edit" , new {id = customerDiscount.Id})">
                                                <i class="fa fa-edit"></i> ویرایش
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/adminTheme/assets/datatables/jquery.dataTables.min.js"></script>
    <script src="~/adminTheme/assets/datatables/dataTables.bootstrap.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#datatable').dataTable();
        });
    </script>
}

