@using BlogManagement.Application.Contracts.ArticleCategory;
@model EditArticleCategory
@{
}

<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title">ویرایش گروه مقاله</h5>
        <button type="button" class="btn btn-label-secondary btn-reset" data-bs-dismiss="modal" aria-hidden="true">×</button>
    </div>

    <form asp-page="./Index" asp-page-handler="Edit"
          method="post"
          data-ajax="true"
          data-callback=""
          data-action="Refresh"
          enctype="multipart/form-data">
        <div class="modal-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group  mb-3">
                        <label asp-for="Name" class="control-label">نام</label>
                        <input type="text" class="form-control" asp-for="Name" onchange="makeSlug('Name', 'Slug')">
                        <span asp-validation-for="Name" class="error"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group  mb-3">
                        <label asp-for="Slug" class="control-label">اسلاگ</label>
                        <input type="text" class="form-control" asp-for="Slug">
                        <span asp-validation-for="Slug" class="error"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group  mb-3">
                        <label asp-for="Picture" class="control-label">عکس</label>
                        <input type="file" class="form-control" asp-for="Picture" accept="image/*">
                        <span asp-validation-for="Picture" class="error"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group  mb-3">
                        <label asp-for="ShowOrder" class="control-label">ترتیب نمایش</label>
                        <input class="form-control" asp-for="ShowOrder">
                        <span asp-validation-for="ShowOrder" class="error"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group  mb-3">
                        <label asp-for="PictureAlt" class="control-label">Alt</label>
                        <input type="text" class="form-control" asp-for="PictureAlt">
                        <span asp-validation-for="PictureAlt" class="error"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group  mb-3">
                        <label asp-for="PictureTitle" class="control-label">عنوان</label>
                        <input type="text" class="form-control" asp-for="PictureTitle">
                        <span asp-validation-for="PictureTitle" class="error"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group  mb-3 no-margin">
                        <label asp-for="Description" class="control-label">توضیحات</label>
                        <textarea class="form-control autogrow" asp-for="Description" onchange="fillField('Description', 'MetaDescription')"
                                  style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 104px;"></textarea>
                        <span asp-validation-for="Description" class="error"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group  mb-3">
                        <label asp-for="Keywords" class="control-label">کلمات کلیدی</label>
                        <input type="text" class="form-control" asp-for="Keywords">
                        <span asp-validation-for="Keywords" class="error"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group  mb-3 no-margin">
                        <label asp-for="Metadescription" class="control-label">توضیحات متا</label>
                        <textarea class="form-control autogrow" asp-for="Metadescription"
                                  style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 104px;"></textarea>
                        <span asp-validation-for="Metadescription" class="error"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group  mb-3">
                        <label asp-for="CanonicalAddress" class="control-label">CanonicalAddress</label>
                        <input type="text" class="form-control" asp-for="CanonicalAddress">
                        <span asp-validation-for="CanonicalAddress" class="error"></span>
                    </div>
                </div>
            </div>
        </div>
        <input type="hidden" value="@Model.Id" asp-for="Id" />
        <div class="modal-footer">
            <button type="reset" class="btn btn-label-secondary btn-reset" data-bs-dismiss="modal">بستن</button>
            <button type="submit" class="btn btn-info">ایجاد</button>
        </div>
    </form>
</div>