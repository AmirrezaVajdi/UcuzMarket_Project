@using InventoryManagement.Application.Contract.Inventory
@model ReduceInventory
@{
}

<div class="modal-content">
    <div class="modal-header">
        <h4 class="modal-title">کاهش موجودی انبار</h4>
        <button type="button" class="btn btn-label-secondary btn-reset" data-bs-dismiss="modal" aria-hidden="true">×</button>
    </div>

    <form asp-page="./Index" asp-page-handler="Reduce"
          method="post"
          data-ajax="true"
          data-callback=""
          data-action="Refresh">
        <div class="modal-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="Count" class="control-label">تعداد</label>
                        <input class="form-control" asp-for="Count" />
                        <span asp-validation-for="Count" class="error"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="Description" class="control-label">توضیحات</label>
                        <textarea type="text" class="form-control" asp-for="Description"></textarea>
                        <span asp-validation-for="Description" class="error"></span>
                    </div>
                </div>
            </div>
            <input type="hidden" asp-for="InventoryId" value="@Model.InventoryId" />
        </div>
        <div class="modal-footer">
            <button type="reset" class="btn btn-label-secondary btn-reset" data-bs-dismiss="modal">بستن</button>
            <button type="submit" class="btn btn-info">ایجاد</button>
        </div>
    </form>
</div>
