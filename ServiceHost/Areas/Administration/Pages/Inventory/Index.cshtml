@page
@using InventoryManagement.Infrastructure.Configuration.Permissions;
@model ServiceHost.Areas.Administration.Pages.Inventory.IndexModel
@{
    ViewData["Title"] = "مدیریت انبار";
}

<div class="row" Permission="@InventoryPermissions.CreateInventory">
    <div class="col-sm-12">
        <h4 class="page-title pull-right">@ViewData["title"]</h4>
        <p class="pull-left">
            <a class="btn btn-success btn-lg" href="#showmodal=@Url.Page("./Index", "Create")">ایجاد انبار جدید</a>
        </p>
    </div>
</div>

<div class="row" Permission="@InventoryPermissions.SearchInventory">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">جست و جو در انبار</h3>
            </div>
            <div class="panel-body">
                <form class="form-inline" role="form" method="get">
                    <div class="form-group">
                        <label asp-for="SearchModel.ProductId" class="sr-only"></label>
                        <select asp-items="Model.Products" class="form-control" asp-for="SearchModel.ProductId">
                            <option value="0">گروه محصولی ...</option>
                        </select>
                    </div>

                    <div class="form-group m-r-10">
                        <div class="checkbox checkbox-primary">
                            <input asp-for="SearchModel.InStock">
                            <label asp-for="SearchModel.InStock">
                                جستجو در ناموجودها
                            </label>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-success waves-effect waves-light m-l-10">جستجو</button>
                    <a class="btn btn-primary waves-effect waves-light m-l-10" asp-page="./Index">مشاهده همه</a>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row" id="ProductCategoriesDiv" Permission="@InventoryPermissions.ListInventory">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">لیست انبار (@Model.Inventory.Count)</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>محصول</th>
                                    <th>قیمت</th>
                                    <th>موجودی انبار</th>
                                    <th>تاریخ تولید</th>
                                    <th>عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var inventory in Model.Inventory)
                                {
                                    <tr>
                                        <td>@inventory.Id</td>
                                        <td>@inventory.Product</td>
                                        <td>@inventory.UnitPrice</td>
                                        <td>@inventory.CurrentCount</td>
                                        <td>@inventory.CreationDate</td>

                                        <td>
                                            <a Permission="@InventoryPermissions.EditInventory" class="btn btn-warning waves-effect waves-light m-b-5"
                                               href="#showmodal=@Url.Page("./Index", "Edit" , new {id = inventory.Id})">
                                                <i class="fa fa-edit"></i> ویرایش
                                            </a>

                                            <a Permission="@InventoryPermissions.Increase" class="btn btn-success waves-effect waves-light m-b-5"
                                               href="#showmodal=@Url.Page("./Index", "Increase" , new {id = inventory.Id})">
                                                <i class="fa fa-plus"></i> افزایش موجودی
                                            </a>

                                            <a Permission="@InventoryPermissions.Reduce" class="btn btn-purple waves-effect waves-light m-b-5"
                                               href="#showmodal=@Url.Page("./Index", "Reduce" , new {id = inventory.Id})">
                                                <i class="fa fa-minus"></i> کاهش موجودی
                                            </a>

                                            <a Permission="@InventoryPermissions.OperationLog" class="btn btn-primary waves-effect waves-light m-b-5"
                                               href="#showmodal=@Url.Page("./Index", "Log", new {id = inventory.Id})"
                                               onclick="$('.modal-dialog').css('width', '60%')">
                                                <i class="fa fa-recycle"></i> مشاهده گردنش انبار
                                            </a>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/adminTheme/assets/datatables/jquery.dataTables.min.js"></script>
    <script src="~/adminTheme/assets/datatables/dataTables.bootstrap.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#datatable').dataTable();
        });
    </script>
}

