@using CommantManagement.Application.Contract.Comment;
@model AdminReplyComment
@{
}

<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title">پاسخ دادن به @Model.ParentName</h5>
        <button type="button" class="btn btn-label-secondary btn-reset" data-bs-dismiss="modal" aria-hidden="true">×</button>
    </div>

    <form asp-page="./Index" asp-page-handler="AdminReply"
          method="post"
          data-ajax="true"
          data-callback=""
          data-action="Refresh">
        <div class="modal-body">
            <div class="row">
                <div class="col-12">
                    <div class="form-group">
                        <label asp-for="Message" class="control-label">پاسخ</label>
                        <input type="Message" class="form-control" asp-for="Message">
                        <span asp-validation-for="Message" class="error"></span>
                    </div>
                </div>
                <input type="hidden" asp-for="ParentId" value="@Model.ParentId" />
            </div>
        </div>
        <div class="modal-footer">
            <button type="reset" class="btn btn-label-secondary btn-reset" data-bs-dismiss="modal">بستن</button>
            <button type="submit" class="btn btn-info">تایید پاسخ</button>
        </div>
    </form>
</div>