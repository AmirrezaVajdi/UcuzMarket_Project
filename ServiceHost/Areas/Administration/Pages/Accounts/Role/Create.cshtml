@page
@model ServiceHost.Areas.Administration.Pages.Accounts.Role.CreateModel
@{

}

<div class="row" id="ProductCategoriesDiv">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">ایحاد نقش جدید</h3>
            </div>
            <div class="panel-body">
                <form method="post">
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="Command.Name" class="control-label">نام نقش</label>
                                    <input type="text" class="form-control" asp-for="Command.Name">
                                    <span asp-validation-for="Command.Name" class="error"></span>
                                </div>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-success waves-effect waves-light m-b-5">ایجاد</button>
                        <a asp-page="./Index" class="btn btn-dark waves-effect waves-light m-b-5">بازگشت</a>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>